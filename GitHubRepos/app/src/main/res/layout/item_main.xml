<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="com.khalid.hamid.githubrepos.network.Status" />
        <import type="com.khalid.hamid.githubrepos.network.Resource" />

        <variable
            name="repos"
            type="com.khalid.hamid.githubrepos.vo.RepoViewData" />
    </data>

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView
        android:id="@+id/imageView2"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        android:elevation="12dp"
        app:cardCornerRadius="40dp"
        android:layout_centerHorizontal="true">

        <ImageView
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:id="@+id/imageView1"
            tools:src="@drawable/refresh_black"
            app:imageUrl="@{repos.imageUrl}"
            android:scaleType="centerCrop"
            android:contentDescription="@string/project_avatar_imge" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        style="@style/title"
        tools:text="Rakuten Android"
        app:showIfNotEmpty="@{repos.name}"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="@+id/imageView2" />

    <TextView
        android:id="@+id/textView4_timestamp"
        style="@style/domain"
        android:layout_width="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:showIfNotEmpty="@{repos.timestamp}"
        tools:text="28 May 2021" />

    <TextView
        android:id="@+id/textView5_description"
        android:layout_marginBottom="3dp"
        android:layout_width="wrap_content"
        tools:text="Some repo"
        android:layout_height="wrap_content"
        style="@style/title"
        android:maxLines="2"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/textView4_timestamp"
        app:showIfNotEmpty="@{repos.description}" />

    <TextView
        android:id="@+id/textView6_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="500 MB"
        style="@style/title"
        android:maxLines="2"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/textView5_description"
        app:showIfNotEmpty="@{repos.size}" />

</androidx.constraintlayout.widget.ConstraintLayout>

</layout>